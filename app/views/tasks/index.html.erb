<h1>タスク一覧</h1>
<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タスク</th></th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <div class="row">
        <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-sm-8 col-lg-offset-3 col-sm-6">  
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
        </div>
      </div>
      <% end %>
    </tbody>
  </table>
  
  <div>
    <%= paginate @tasks %>
  </div>
  
<% end %>

<%= link_to '新規タスクの追加', new_task_path, class: "btn btn-primary" %>